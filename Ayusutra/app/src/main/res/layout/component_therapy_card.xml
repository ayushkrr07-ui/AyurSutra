<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AyurSutra.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTherapyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AyurSutra.Headline6"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Abhyanga Therapy" />

        <TextView
            android:id="@+id/tvTherapyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.AyurSutra.Body2"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTherapyName"
            tools:text="Sept 21, 2023" />

        <TextView
            android:id="@+id/tvTherapyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.AyurSutra.Body2"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTherapyDate"
            tools:text="10:30 AM - 11:30 AM" />

        <TextView
            android:id="@+id/tvTherapistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:textAppearance="@style/TextAppearance.AyurSutra.Body2"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTherapyTime"
            tools:text="Dr. Sharma" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            style="@style/Widget.AyurSutra.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View Details"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTherapistName" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReschedule"
            style="@style/Widget.AyurSutra.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Reschedule"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnViewDetails"
            app:layout_constraintEnd_toStartOf="@+id/btnViewDetails"
            app:layout_constraintTop_toTopOf="@+id/btnViewDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>