<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Symptom Report"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/text_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Track your symptoms to monitor your progress"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/text_secondary" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_date"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Pain Level -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pain Level"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/text_primary" />

        <SeekBar
            android:id="@+id/seek_bar_pain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="10"
            android:progress="5"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No Pain"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_pain_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/10"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Severe Pain"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Mobility Level -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mobility Level"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/text_primary" />

        <SeekBar
            android:id="@+id/seek_bar_mobility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="10"
            android:progress="6"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limited"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_mobility_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6/10"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Full Mobility"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Sleep Quality -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sleep Quality"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/text_primary" />

        <SeekBar
            android:id="@+id/seek_bar_sleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="10"
            android:progress="7"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Poor"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_sleep_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7/10"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Excellent"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Stress Level -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Stress Level"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/text_primary" />

        <SeekBar
            android:id="@+id/seek_bar_stress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="10"
            android:progress="4"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Low Stress"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_stress_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4/10"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="High Stress"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_notes"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Additional Notes">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Report" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>