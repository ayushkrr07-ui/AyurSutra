<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Styles with soft shadows -->
    <style name="Widget.AyurSutra.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
    
    <style name="Widget.AyurSutra.Card.Elevated" parent="Widget.AyurSutra.Card">
        <item name="cardElevation">8dp</item>
    </style>
    
    <style name="Widget.AyurSutra.Card.Flat" parent="Widget.AyurSutra.Card">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_tertiary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.AyurSutra.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.AyurSutra.Button.Secondary" parent="Widget.AyurSutra.Button">
        <item name="backgroundTint">@color/secondary</item>
    </style>
    
    <style name="Widget.AyurSutra.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.AyurSutra.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- EditText Styles -->
    <style name="Widget.AyurSutra.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
    
    <!-- Progress Bar Styles -->
    <style name="Widget.AyurSutra.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/text_tertiary</item>
        <item name="android:progressTint">@color/primary</item>
    </style>
    
    <!-- Calendar Styles -->
    <style name="Widget.AyurSutra.Calendar" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorSurface">@color/surface</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.AyurSutra.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconVisible">false</item>
    </style>
    
    <style name="Widget.AyurSutra.Chip.Selected" parent="Widget.AyurSutra.Chip">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <!-- Tab Styles -->
    <style name="Widget.AyurSutra.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabRippleColor">@color/primary_light</item>
    </style>
</resources>